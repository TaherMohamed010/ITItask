using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Day1Task
{
    class Task1
    {
        static void Main(string[] args)
        {
            #region Q1
            Console.Write("Enter a character: ");
            char ch = Console.ReadKey().KeyChar;
            Console.WriteLine(); 

            int asciiCode = (int)ch; 
            Console.WriteLine($"The ASCII code of '{ch}' is: {asciiCode}");
            #endregion

            #region Q2
            Console.Write("Enter an ASCII code (0–127): ");
            int AsciiCode = int.Parse(Console.ReadLine());

            if (AsciiCode >= 0 && AsciiCode <= 127) 
            {
                char Ch = (char)AsciiCode; 
                Console.WriteLine($"The character for ASCII code {AsciiCode} is: '{Ch}'");
            }
            else
            {
                Console.WriteLine("Invalid ASCII code! Please enter a value between 0 and 127.");
            }
            #endregion

            #region Q3
            Console.Write("Enter a number: ");
            int num = int.Parse(Console.ReadLine()); 

            if (num % 2 == 0)
            {
                Console.WriteLine($"{num} is Even.");
            }
            else
            {
                Console.WriteLine($"{num} is Odd.");
            }
            #endregion

            #region Q4
            Console.Write("Enter the first number: ");
            int num1 = int.Parse(Console.ReadLine());

            Console.Write("Enter the second number: ");
            int num2 = int.Parse(Console.ReadLine());

            int sum = num1 + num2;
            int subtraction = num1 - num2;
            int multiplication = num1 * num2;

            Console.WriteLine($"\nResults:");
            Console.WriteLine($"{num1} + {num2} = {sum}");
            Console.WriteLine($"{num1} - {num2} = {subtraction}");
            Console.WriteLine($"{num1} * {num2} = {multiplication}");
            #endregion

            #region Q5
            Console.Write("Enter student degree (0–100): ");
            int degree = int.Parse(Console.ReadLine());

            string grade;

            if (degree >= 90 && degree <= 100)
                grade = "A";
            else if (degree >= 80)
                grade = "B";
            else if (degree >= 70)
                grade = "C";
            else if (degree >= 60)
                grade = "D";
            else if (degree >= 50)
                grade = "E";
            else if (degree >= 0)
                grade = "F";
            else
                grade = "Invalid"; 

            if (grade == "Invalid")
                Console.WriteLine("Invalid degree entered!");
            else
                Console.WriteLine($"The grade for degree {degree} is: {grade}");
            #endregion

            #region Q6
            Console.Write("Enter a number to display its multiplication table: ");
            int Number = int.Parse(Console.ReadLine());

            Console.WriteLine($"\nMultiplication Table of {num}:");

            for (int i = 1; i <= 12; i++) 
            {
                Console.WriteLine($"{Number} x {i} = {Number * i}");
            }
            #endregion
        }
    }
}
